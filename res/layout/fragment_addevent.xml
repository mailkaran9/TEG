<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/img2">

    <EditText
        android:id="@+id/etSynopsis"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etTime"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Synopsis"
        android:textSize="17dp"  />

    <EditText
        
            android:id="@+id/etDate"
            android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etVenue"
        android:layout_below="@+id/etVenue"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Date" 
        android:textSize="17dp" />

    <TextView
        android:id="@+id/e"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etSynopsis"
        android:layout_alignBottom="@+id/etSynopsis"
        android:layout_alignParentLeft="true"
        android:text="Synopsis"
        android:textSize="17dp" />

    

       <!--  <requestFocus />-->

    <EditText
        android:id="@+id/etName"
        android:scaleType="fitXY"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etCategory"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="Name"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/etCategory"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etName"
        android:ems="10"
        android:hint="Category"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView3"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etVenue"
        android:layout_alignParentLeft="true"
        android:text="Venue"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/etVenue"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etCategory"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Venue"
        android:textSize="17dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etTime"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etDate"
        android:layout_below="@+id/etDate"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Time"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView5"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etTime"
        android:layout_alignLeft="@+id/textView1"
        android:text="Time"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/etOrganisers"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etSynopsis"
        android:ems="10"
        android:hint="Organisers"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView7"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etOrganisers"
        android:layout_alignLeft="@+id/textView4"
        android:text="Organisers"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etDate"
        android:layout_alignBottom="@+id/etDate"
        android:layout_alignLeft="@+id/textView5"
        android:scaleType="fitXY"
        android:text="Date"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etCategory"
        android:layout_alignBottom="@+id/etCategory"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:text="Category"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etName"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:text="Name"
        android:textSize="17dp" />

    <Button
        android:id="@+id/bReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_below="@+id/etOrganisers"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:text="Add Event" />

    </RelativeLayout>